@model PHCDto.DTO.RewardsDTO

@{
    ViewBag.Title = "Wallpaper";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>

<div style="width: 100%; float: left; margin-top: 50px">

    <div style="width: 100%; float: left; font-size: 16px; font-weight: bold; color: #111; padding-left: 30px">Add Wallpaper</div>


     <div style="float: left; width: 100%; margin-top: 10px">
@using (Html.BeginForm("Wallpaper", "Ad", FormMethod.Post, new { area = "Admin", enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <script type="text/javascript">
        function readbadge(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#badgelogo').attr('src', e.target.result);
                    $('#txtbadge').val(e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }       
            </script>
    
    
     <div class="divblock">
                    <div class="divblock-left">Title:</div>
                    <div class="divblock-right">
                        @Html.TextBoxFor(model => model.Title, new { @Style = "width:145px", @class = "inp-round1", id = "txtbadgechk" })
                        @Html.ValidationMessageFor(model => model.Title)
                       
                    </div>
                </div>


                <div class="clr"></div>
                <div class="divblock">
                    <div class="divblock-left">Wallpaper:</div>
                    <div class="divblock-right">
                        <img id="badgelogo" name="PetImg" src="@Url.Content("~/Content/images/Noimage1.jpg")" width="100" height="100" style="cursor:pointer" title="Click to upload Photo"  />
                        @Html.TextBoxFor(model => model.WallImage, new { @id = "txtbadge", hidden = true })
                        @Html.ValidationMessageFor(model => model.WallImage)

                        <input type="file" name="upbadge" id="upbadge" size="8" style="display: none" onchange="readbadge(this);" />

                        <script>
                            $("#badgelogo").click(function () {
                                $("#upbadge").trigger('click');
                            });
                        </script>

                    </div>
                </div>
                


                <div class="clr"></div>
    
     <div class="clr"></div>
                <div class="divblock">
                    <div class="divblock-left">&nbsp;</div>
                    <div class="divblock-right">
                        <input type="submit" value="Save" class="button orange small" id="goto" />
                    </div>
                </div>
    
    
    
    
}

         </div>
    </div>


