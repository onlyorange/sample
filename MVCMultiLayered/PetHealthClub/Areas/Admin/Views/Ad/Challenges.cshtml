@model IEnumerable<PHCDto.DTO.ChallengeDTO>
@{
    ViewBag.Title = "Challenges";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}


<script src="@Url.Content("~/Content/_assets/js/jquery.tablesorter-2.0.3.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/_assets/js/jquery.tablesorter.filer.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/_assets/js/jquery.tablesorter.pager.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#tableOne").tablesorter({ debug: false, sortList: [[0, 0]], widgets: ['zebra'] })
                    .tablesorterPager({ container: $("#pagerOne"), positionFixed: false, size: 5 })
                    .tablesorterFilter({
                        filterContainer: $("#filterBoxOne"),
                        filterClearContainer: $("#filterClearOne"),
                        filterColumns: [0, 1, 2, 3],
                        filterCaseSensitive: false
                    });
    });
</script>

<div style="width: 100%; float: left; margin-top: 50px">
    <div style="width: 100%; float: left; font-size: 16px; font-weight: bold; color: #111; padding-left: 30px">Challenges List</div>
      @if(TempData["Success"] != null)
            {                            
                <span class="DisplayMessage111">@TempData["Success"]</span> 
            }
    <div style="float: left; width: 100%; margin-top: 10px">
        <table id="tableOne" style="margin-left: 15px; float: left">
            <thead>
                <tr style="background-color: #E1ECF9">
                    <td colspan="8" style="text-align: right">Search:
                            <input id="filterBoxOne" value="" maxlength="30" size="30" type="text" />
                        <img id="filterClearOne" src="@Url.Content("~/content/_assets/img/cross.png")" title="Click to clear filter."
                                alt="Clear Filter Image" />
                    </td>
                </tr>
                <tr style="background-color: #B78353; width: 100%; height: 25px">
                    <th style="width: 50px; text-align: left; padding-left: 5px"><a href="#" style="color: #fff; font-weight: bold">CHID</a>
                    </th>
                    <th style="width: 150px; text-align: left; padding-left: 5px"><a href="#" style="color: #fff; font-weight: bold">Challenge Week Date</a>

                    </th>
                    <th style="width: 150px; text-align: left; padding-left: 5px"><a href="#" style="color: #fff; font-weight: bold">Challenge Name</a>
                    </th>

                    <th style="width: 100px; text-align: left; padding-left: 5px"><a href="#" style="color: #fff; font-weight: bold">Badge Logo</a>

                    </th>
                    <th style="width: 100px; text-align: left; padding-left: 5px"><a href="#" style="color: #fff; font-weight: bold">Cat Image</a>

                    </th>
                    <th style="width: 100px; text-align: left; padding-left: 5px"><a href="#" style="color: #fff; font-weight: bold">Dog Image</a>

                    </th>
                    <th style="width: 100px; text-align: left; padding-left: 5px"><a href="#" style="color: #fff; font-weight: bold">Edit</a>

                    </th>
                    <th style="width: 100px; text-align: left; padding-left: 5px"><a href="#" style="color: #fff; font-weight: bold">Delete</a>

                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width: 50px; text-align: left; padding-left: 5px">
                            @Html.DisplayFor(modelItem => item.CHID)
                        </td>
                        <td style="width: 100px; text-align: left; padding-left: 5px">
                            @Html.DisplayFor(modelItem => item.SChcreatedDate)
                        </td>
                        <td style="width: 100px; text-align: left; padding-left: 5px">
                            @Html.DisplayFor(modelItem => item.ChallengeName)
                        </td>
                        <td style="width: 100px; text-align: left; padding-left: 5px">
                            <img src="@Url.Content(@item.blogo)" title="@item.bname" style="width:75px; height:75px; float:left; margin-left:-10px" />


                        </td>
                        <td style="width: 100px; text-align: left; padding-left: 5px">
                            <img src="@Url.Content(@item.catchImg)"  style="width:75px; height:75px; float:left; margin-left:0px; border-radius:5px;-moz-border-radius:5px;-webkit-border-radius:5px" />
                        </td>
                        <td style="width: 100px; text-align: left; padding-left: 5px">
                            <img src="@Url.Content(@item.dogchImg)" style="width:75px; height:75px; float:left; margin-left:0px;border-radius:5px;-moz-border-radius:5px;-webkit-border-radius:5px" />
                        </td>
                        <td style="width: 100px; text-align: left; padding-left: 5px">
                            @Html.ActionLink("Edit", "EditCh", new { id = item.CHID })
                        </td>
                        <td style="width: 100px; text-align: left; padding-left: 5px">
                            @Html.ActionLink("Delete", "DeleteCh", new { id = item.CHID }, new { onclick = "return confirm('Do you want to delete this Challenge?');" })
                        </td>




                    </tr>
                }
            </tbody>
            <tfoot>
                <tr id="pagerOne" style="background-color: #E1ECF9">
                    <td align="center" style="font-size: 9pt;" colspan="8">Page:
                            <img src="@Url.Content("~/Content/_assets/img/first.png")" class="first" />
                        <img src="@Url.Content("~/Content/_assets/img/prev.png")" class="prev" />
                        <input type="text" class="pagedisplay" />
                        <img src="@Url.Content("~/Content/_assets/img/next.png")" class="next" />
                        <img src="@Url.Content("~/Content/_assets/img/last.png")" class="last" />
                        <select class="pagesize">
                            <option selected="selected" value="5">5</option>
                            <option value="10">10</option>
                            <option value="15">15</option>
                            <option value="20">20</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td colspan="4">&nbsp; </td>

                </tr>
            </tfoot>
        </table>
    </div>
</div>
